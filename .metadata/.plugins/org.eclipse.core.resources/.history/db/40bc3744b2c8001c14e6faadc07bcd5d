package problem_8_1;

public class Counter implements Runnable{
	
	Storage s;
	public Counter(Storage s) {
		super();
		this.s = s;
	}
	
@Override 
synchronized public void run() {
	// TODO Auto-generated method stub
	for(int i = 0;i<10 ;i++) {
		s.setX(i);
		 synchronized(s)
         {
             try {
                 s.wait();
             } catch (InterruptedException e) {
                 // TODO Auto-generated catch block
                 e.printStackTrace();
             }

         }
	}
 }
}
